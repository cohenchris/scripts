#!/bin/bash

DOCKER_COMPOSE_HOME_DIR="/home/${USER}/server"
SCRIPTS_DIR="/home/${USER}/scripts"

# Update all packages
paru -Syu --noconfirm

paru -Scc --noconfirm

# Update docker containers
cd ${DOCKER_COMPOSE_HOME_DIR}
docker-compose pull
docker-compose up -d

# Prune extra docker information
docker system prune -a -f

# Mirror boot EFI partitions
${SCRIPTS_DIR}/os/boot-mirror.sh zroot
